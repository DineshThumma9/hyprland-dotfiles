// -*- mode: jsonc -*-
{
    "height": 37,
    "spacing": 4,

    // -------------------------------------------------------------------------
    // MODULE LAYOUT
    // -------------------------------------------------------------------------
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/mode",
        "hyprland/scratchpad"
    ],

    "modules-center": [
        "clock",
        "custom/media"
    ],

    "modules-right": [
        "group/bluetooth-drawer",
        "group/network-drawer",
        "battery",
        "pulseaudio",
        "custom/notification",
        "custom/power"
    ],

    // -------------------------------------------------------------------------
    // GROUP DRAWERS (Hover Animations)
    // -------------------------------------------------------------------------
    "group/network-drawer": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 300,
            "children-class": "network-details",
            "transition-left-to-right": true // Opens to the left (inwards)
        },
        "modules": [
            "custom/network-icon",
            "network"
        ]
    },

    "group/bluetooth-drawer": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 300,
            "children-class": "bluetooth-details",
            "transition-left-to-right": true // Opens to the left (inwards)
        },
        "modules": [
            "custom/bluetooth-icon",
            "bluetooth"
        ]
    },

    // -------------------------------------------------------------------------
    // CUSTOM MODULES & ICONS
    // -------------------------------------------------------------------------
    "custom/network-icon": {
        "format": "ó°¤¨",
        "tooltip": false,
        "on-click": "~/.config/hypr/scripts/rofi-wifi-menu.sh"
    },

    "custom/bluetooth-icon": {
        "format": "ïŠ”",
        "tooltip": false,
        "on-click": "~/.config/hypr/scripts/rofi-bluetooth.sh"
    },

    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ï†¼",
            "default": "ğŸœ"
        },
        "escape": true,
        "exec": "/usr/bin/python3 $HOME/.config/waybar/scripts/mediaplayer.py 2> /dev/null",
        "on-click": "playerctl play-pause",
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous"
    },

    "custom/power": {
        "format": "â» ",
        "tooltip": false,
        "on-click": "~/.config/hypr/scripts/wlogout-wrapper.sh"
    },

    "custom/notification": {
        "tooltip": true,
        "format": "<span size='16pt'>{icon}</span>",
        "format-icons": {
            "notification": "ó±…«",
            "none": "ó°‚œ",
            "dnd-notification": "ó°‚ ",
            "dnd-none": "ó°ª“",
            "inhibited-notification": "ó°‚›",
            "inhibited-none": "ó°ª‘",
            "dnd-inhibited-notification": "ó°‚›",
            "dnd-inhibited-none": "ó°ª‘"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },

    // -------------------------------------------------------------------------
    // STANDARD MODULES
    // -------------------------------------------------------------------------
"hyprland/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "format-icons": {
        "1": "ó°–Ÿ", // Brave
        "2": "ï²", // VSCodium
        "3": "ó°„›", // Kitty
        "focused": "ï†’",
        "default": "ï„‘"
    },
    "persistent-workspaces": {
        "*": 3 // Always show the first 3 workspaces
    }
},

    "hyprland/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "hyprland/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": [
            "",
            "ï‹’"
        ],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },

    "network": {
        "format-wifi": "{essid}", 
        "format-ethernet": "{ipaddr}/{cidr}",
        "tooltip-format": "{essid} ({signalStrength}%)",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Disconnected",
        "on-click": "~/.config/hypr/scripts/rofi-wifi-menu.sh"
    },

    "bluetooth": {
        "format": "On",
        "format-disabled": "Off",
        "format-connected": "{device_alias}", 
        "format-connected-battery": "{device_alias} {device_battery_percentage}%",
        "tooltip-format": "{controller_alias}\t{device_alias}\n\n{num_connections} connected",
        "on-click": "~/.config/hypr/scripts/rofi-bluetooth.sh"
    },

    "clock": {
        "format": "ï€— {:%H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small class='padding:7px;margin:5px;'>{calendar}</small></tt>",
        "format-alt": "ï³ {:%Y-%m-%d}"
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ï—§",
        "format-plugged": "{capacity}% ï‡¦",
        "format-alt": "{time} {icon}",
        "format-icons": [
            "ï‰„",
            "ï‰ƒ",
            "ï‰‚",
            "ï‰",
            "ï‰€"
        ]
    },

    // UNUSED BUT KEPT FOR FUTURE USE
    "keyboard-state": {
