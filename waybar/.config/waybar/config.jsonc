        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ï€£",
            "unlocked": "ï‚œ"
        }
    },
    "mpd": {
        "format": "{stateIcon}{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) â¸¨{songPosition}|{queueLength}â¸© {volume}% ï€",
        "format-disconnected": "Disconnected ï€",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ï€",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": { "on": "ïƒ„ " },
        "random-icons": { "off": "<span color=\"#f53c3c\">ï´</span> ", "on": "ï´ " },
        "repeat-icons": { "on": "ï€ " },
        "single-icons": { "on": "ï€1 " },
        "state-icons": { "paused": "ïŒ", "playing": "ï‹" },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": { "activated": "ï®", "deactivated": "ï°" }
    },
    "tray": {
        "icon-size": 21,
        "spacing": 10,
        "ignore-list": [ "nm-applet", "blueman-applet", "org.blueman.Manager" ]
    },
    "cpu": { "format": "{usage}% ï‹›", "tooltip": false },
    "memory": { "format": "{}% ïƒ‰" },
    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}Â°C {icon}",
        "format-icons": [ "ï«", "ï‹‰", "ï©" ]
    },
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": [ "ğŸŒ‘", "ğŸŒ˜", "ğŸŒ—", "ğŸŒ–", "ğŸŒ•" ]
    },
    "battery#bat2": { "bat": "BAT2" },
    "power-profiles-daemon": {
